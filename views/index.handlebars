<div class="noticias-container">
     {{#if noticias}}
        {{#each noticias}}
       
        <article class="noticia-card">
            <h1 class="noticia-titulo"><a href="/noticias/news/{{dataValues.id}}"> {{dataValues.titulo}}</a></h1>
            <h3 class="noticia-subtitulo">{{dataValues.subti}}</h3>
            
            {{#if fotos}}
            <img src="{{dataValues.fotos}}" alt="{{dataValues.titulo}}" class="noticia-imagem">
            {{else}}
            <img src="{{dataValues.fotos}}" alt="Imagem padr√£o" class="noticia-imagem">
            {{/if}}
            
            <p class="noticia-texto">{{dataValues.texto}}</p>
            
            <div class="noticia-footer">
                <div>
                    {{#if nomeAutor}}
                    <strong>üìù Autor:</strong> {{dataValues.nomeAutor}}
                    {{#if cidAutor}} - {{dataValues.cidAutor}}{{/if}}
                    {{/if}}
                </div>
                <a href="/comentarios/coment/{{dataValues.id}}" target="_blank" class="btn-comentario">
                    üí¨ Comentar
                </a>
            </div>
        </article>
        
        {{#unless @last}}
        <hr class="noticia-divider">
        {{/unless}}
        {{/each}}
    {{else}}
        <div class="nenhuma-noticia">
            <p>Nenhuma not√≠cia dispon√≠vel no momento.</p>
        </div>
    {{/if}}
</div>